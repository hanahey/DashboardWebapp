@model IEnumerable<DashboardWebapp.Models.Tracker>

@{
    ViewBag.Title = "Index";
}

<br />

<h4>
    @Html.ActionLink("Add Tracker", "AddTracker")
</h4>

<h2>Trackers</h2>

@{int count = 0;}

<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    No.
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GoalAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GoalDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    using (Html.BeginForm("Delete", "Trackers", new { id = item.Id }))
                    {
                        <tr>
                            <td>
                                @{ count = count + 1;}
                                @count
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GoalAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GoalDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                            <td>
                                @if (item.Transactions.Count != 0)
                                {
                                    @Html.ActionLink("Transactions", "TrackerTransactions", new { id = item.Id })
                                }
                                else
                                {
                                    <span title="This tracker has no transactions">Transactions</span>
                                }
                                &nbsp;
                                @Html.ActionLink("Edit", "EditTracker", new { id = item.Id })

                                <input type="submit" style="border:none; background-color:transparent; color:#C00000" value="Delete"
                                       onclick="return confirm('Are you sure you want to delete the @item.Name tracker?');" />
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>