@model IEnumerable<DashboardWebapp.Models.Tracker>

@{
    ViewBag.Title = "Index";
}

<h2>List of Trackers</h2>

<p>
    @Html.ActionLink("Add a tracker", "AddTracker")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GoalAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GoalDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            using (Html.BeginForm("Delete", "Trackers", new { id = item.Id }))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GoalAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GoalDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditTracker", new { id = item.Id })

                        <input type="submit" value="Delete"
                               onclick="return confirm('Are you sure you want to delete the tracker @item.Name?');" />
                    </td>
                </tr>
            }
        }
    }

</table>
