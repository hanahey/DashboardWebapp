@model DashboardWebapp.Models.RecurringTransaction

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <div class="form-group" style="text-align:center">
            <p>
                Are you sure you want to stop <b>@ViewBag.TrackerName</b>'s recurring payment of
                <b>£@(-Model.Transactions.Last().Amount)</b>?
            </p>
        </div>

        <div class="text-center">
            <input type="submit" value="Stop" class="btn btn-danger" />
        </div>
    </div>
}

